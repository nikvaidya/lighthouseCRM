$label-text:#595d61;
.summary-item-blue,.summary-item-yellow,.summary-item-green,.summary-item-purple
{
    --min-height:25px;
    --padding-start: 0px;
    margin-bottom: 7px;
    border-bottom: 1px solid #e9e9e9;
    ion-label
    {
        color: $label-text;
    }
    ion-note
    {
        padding-top:2px;
        padding-bottom:2px;
        font-size:16px;
        font-weight: 500;
       
    }
    ion-avatar{
        width: 25px;
        height: 25px;
        border-radius: 7px;
        
        text-align: center;
        line-height: 30px;
        margin: 3px 10px 3px 0px;
        img
        {
            width:16px;
            max-width:16px;
            height:16px;
        }
    }
}

    .summary-item-blue
    {
        
        ion-note
        {
            color: #4990e2;
        }
        ion-avatar{
          
            background: #4990e2;
          
          
        }
    }
    .summary-item-yellow
    {
        
        
        ion-note
        {
          
            color: #e28a08;
        }
        ion-avatar{
            
            background: #e28a08;
            
           
    }
}
    .summary-item-green
    {
      
        ion-note
        {
          
            color: #46a74a;
        }
        ion-avatar{
           
            background: #46a74a;
          
          
        }
    }
    .summary-item-purple
    {
       
        ion-note
        {
          
            color: #9667e8;
        }
        ion-avatar{
            
            background: #9667e8;
           
          
        }
    }
